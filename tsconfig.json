{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "*": ["./src/*"],
      "i18n": ["./docs/i18n.json"]
    }
  },
  "include": ["plugins/plugin-post-resolver"]
}
